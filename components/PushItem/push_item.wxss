/* components/PushItem/push_item.wxss */

.push_container {
  border-bottom: 1px solid #e6e6e6;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
  display: flex;
}

.user_img {
  margin-right: 8rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}

.push_content {
  flex: 1;
}

.userinfo{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.username {
  font-size: 32rpx;
  color: #234d76;
  font-weight: 700;
}
.phone{
  background: #46AC52;
  width: 142rpx;
  height: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
}
.taps {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: flex-end;
}
.category_item{
  margin-right: 8rpx;
  border-radius: 5rpx;
  background: #f7a908;
  color: #fff;
  font-size: 30rpx;
  height: 46rpx;
  line-height: 46rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
}
.tag{
  background: #ff5858;
  margin-right: 8rpx;
  border-radius: 5rpx;
  color: #fff;
  font-size: 26rpx;
  height: 38rpx;
  line-height: 38rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
}
.describe {
  margin-bottom: 8rpx;
  font-size: 32rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.diff_box{
  margin-bottom: 5rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.all{
  margin-bottom: 10rpx;
  padding-right: 30rpx;
  text-align: end;
  font-size: 28rpx;
  color: #234d76;
}
.images {
  margin-bottom: 15rpx;
  display: flex;
  flex-wrap: wrap;
}

.goods_img {
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  width: 180rpx;
  height: 180rpx;
}
.goods_video{
  margin-bottom: 12rpx;
  width: 220rpx;
  height: 330rpx;
}
.bottom_info {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #707070;
}
.info_left{
  display: flex;
  align-items: center;
}
.detail_address{
  margin-left: 20rpx;
}
/* 大图弹框 */
.imgs{
  padding: 15rpx;
  background: #000;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}
.banner_img{
  width: 100%;
  height: auto;
}
