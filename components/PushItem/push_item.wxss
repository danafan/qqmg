/* components/PushItem/push_item.wxss */

.push_container {
  border-bottom: 1px solid #e6e6e6;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
  display: flex;
}

.user_img {
  margin-right: 8rpx;
  border-radius: 10rpx;
  width: 100rpx;
  height: 100rpx;
}

.push_content {
  flex: 1;
}

.userinfo{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.username {
  font-size: 32rpx;
  color: #234d76;
  font-weight: 700;
}
.phone{
  border-radius: 8rpx;
  width: 130rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  background: #f7a908;
  color: #fff;
  font-size: 24rpx;
}
.taps {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: red;
  display: flex;
  align-items: center;
}
.tap{
  margin-right: 8rpx;
  border-radius: 8rpx;
  background: #a1e81a;
  color: #fff;
  font-size: 20rpx;
  padding: 5rpx 8rpx;
}
.describe {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.images {
  display: flex;
  flex-wrap: wrap;
}

.goods_img {
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  width: 180rpx;
  height: 180rpx;
}

.bottom_info {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #707070;
}
/* 大图弹框 */
.imgs{
  padding: 15rpx;
  background: #000;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}
.banner_img{
  width: 100%;
  height: auto;
}
