  <view class="imgs" wx:if="{{show_img}}" bindtap="close">
    <swiper style="width:100%;height:{{imgheights[current]}}rpx;" bindchange="bindchange">
      <block wx:for="{{big_imgs}}" wx:key="id">
        <swiper-item>
          <image class="banner_img" src="{{item.url}}" data-id='{{index}}' mode="widthFix" bindload="imageLoad"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
