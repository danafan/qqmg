<!--components/PushItem/push_item.wxml-->
<view class="push_container">
  <image class="user_img" src="{{infoItem.user_img}}" data-userid="{{infoItem.user_id}}" bindtap="getUserInfo"></image>
  <view class="push_content">
    <view class="userinfo">
      <view class="username" data-userid="{{infoItem.user_id}}" bindtap="getUserInfo">{{infoItem.username}}</view>
      <view class="phone" data-phone="{{infoItem.phone}}" bindtap="call">拨打电话</view>
    </view>
    <view class="taps" bindtap="detail">
      <view class="category_item">{{infoItem.info_type}}</view>
      <view class="tap" wx:for="{{infoItem.taps}}" wx:for-item="tap" wx:key="*this">{{tap}}</view>
    </view>
    <view class="describe" bindtap="detail">{{infoItem.desc}}</view>
    <view class="all" bindtap="detail">全文</view>
    <view class="images">
      <image class="goods_img" wx:for="{{infoItem.imgs}}" wx:key="*this" wx:for-item="img_url" src="{{img_url}}" data-index="{{index}}" data-imgs="{{infoItem.imgs}}" bindtap="open"></image>
    </view>
    <view class="bottom_info">
      <view class="time">{{infoItem.create_time}}</view>
      <view class="browse">{{infoItem.browse}}浏览</view>
    </view>
  </view>
  <big_img wx:if="{{show_img}}" big_imgs="{{big_imgs}}" current_index="{{current_index}}" bind:onEmit="close"/>
</view>