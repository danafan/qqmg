/* pages/service/service.wxss */

.tab_list {
  background: #fff;
  border-bottom: 1rpx solid #dbdbdb;
  width: 100%;
  height: 85rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}

.tab {
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.active_color {
  font-weight: 700;
  color: #0b0d1d;
}

.active_tab {
  position: relative;
  top: 15rpx;
  height: 6rpx;
  width: 60rpx;
  background: #f7a908;
}

.advertising_list {
  margin-top: 85rpx;
  width: 100%;
  padding: 0 20rpx;
}
