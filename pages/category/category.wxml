<!--pages/category/category.wxml-->
<view class="category_box">
  <view class="title">--- 请选择信息类别 ---</view>
  <view class="cate_list">
    <view class="cate_but cate_but_01 {{index == 1 || index == 5 ? 'cate_but_02' : index == 2 || index == 6 ? 'cate_but_03' : ''}}" wx:for="{{category_list}}" wx:key="category_id" data-index="{{index}}" data-id="{{item.category_id}}" bindtap="checkOneLevel">
     <picker range-key="category_name" bindchange="bindPickerChange" range="{{item.children}}">
     {{item.category_name}}
    </picker>
    </view>
  </view>
  <view class="cate_toast">类别越准确，更加容易被其他粉丝看到哦～</view>
</view>