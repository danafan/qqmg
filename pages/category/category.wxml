<!--pages/category/category.wxml-->
<view class="category_box">
  <view class="title">--- 请选择您的信息类别 ---</view>
  <view class="cate_list">
    <view class="cate_but cate_but_01 {{index == 1 || index == 5 ? 'cate_but_02' : index == 2 || index == 6 ? 'cate_but_03' : ''}}" wx:for="{{categoryList}}" wx:key="id" data-id="{{item.id}}" bindtap="checkOneLevel">
     <picker range-key="val" bindchange="bindPickerChange" range="{{item.types}}">
     {{item.name}}
    </picker>
    </view>
  </view>
  <view class="cate_toast">类别越准确，更加容易被其他粉丝看到哦～</view>
</view>