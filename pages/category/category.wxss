/* pages/category/category.wxss */
page{
  background: #f6f6f6;
}
.title{
  margin-top: 50rpx;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
}
.cate_list{
  padding-left: 15rpx;
  padding-right: 15rpx;
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.cate_but{
  background: #fff;
  margin-bottom: 20rpx;
  width: 350rpx;
  height: 110rpx;
  color: #0b0d1d;
  font-weight: 600;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: relative;
}
.but_content{
  background: #fff;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cate_icon{
  margin-right: 10rpx;
  display: block;
  width: 42rpx;
  height: 42rpx;
}
.cate_toast{
  width: 100%;
  text-align: center;
  padding: 10rpx;
  font-size: 26rpx;
  color: #cdcdcd;
}