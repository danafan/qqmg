/* pages/category/category.wxss */
.title{
  margin-top: 50rpx;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
}
.cate_list{
  padding-left: 15rpx;
  padding-right: 15rpx;
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.cate_but{
  border:3rpx solid #333;
  margin-bottom: 20rpx;
  width: 350rpx;
  height: 100rpx;
  color: #333;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.but_content{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.cate_icon{
  margin-right: 10rpx;
  display: block;
  width: 42rpx;
  height: 42rpx;
}
.cate_toast{
  width: 100%;
  text-align: center;
  padding: 10rpx;
  font-size: 26rpx;
  color: #cdcdcd;
}