/* pages/push/push.wxss */
.push_box{
  height: 500px;
}
.prompt{
  padding: 10rpx;
  background: #f6f6f6;
  width: 100%;
  font-size: 24rpx;
  color:#ff5858;
}
/* 模版内容 */
/* 输入框 */
.title{
  border-bottom: 1px solid #e6e6e6;
  width: 100%;
  height: 94rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  display: flex;
  align-items: center;
}
.title_label{
  width: 150rpx;
  font-size: 32rpx;
  color: #333;
}
.title_input{
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.info_type{
  border-bottom: 1px solid #e6e6e6;
  width: 100%;
  height: 94rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between; 
}
.info_left{
  display: flex;
  align-items: center;
}
.info_label{
  width: 150rpx;
  font-size: 32rpx;
  color: #333;
}

.info_text_null{
  font-size: 30rpx;
  color: #8a8a8a;
}
.info_text{
  font-size: 30rpx;
  color: #333;
}
.info_right{
  width: 32rpx;
  height: 32rpx;
}

.describe_box{
  border-bottom: 1px solid #e6e6e6;
  padding: 25rpx 15rpx 15rpx;
}
.textarea{
  border:1px solid #e6e6e6;
  margin-top: 25rpx;
  width: 100%;
  height: 220rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 10rpx;
  color: #333;
}
.info_taps{
  margin-top: 25rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.tag_item{
  border-radius: 5rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  border:1rpx solid #ff5858;
  font-size: 25rpx;
  height: 46rpx;
  line-height: 46rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  color: #ff5858;
}
.active_tag{
  background: #ff5858;
  color: #fff;
}
.sex_box{
  margin-top: 25rpx;
  display: flex;
}
.weui-cell,.weui-check__label{
  width: 200rpx;
  display: flex;
}
.upload_content{
  border-bottom: 1px solid #e6e6e6;
  width: 100%;
  padding:25rpx 15rpx 15rpx;
}
.upload_label{
  margin-bottom: 25rpx;
  font-size: 32rpx;
  color: #333;
}
.max_imgs{
  color: #8a8a8a;
  font-size: 30rpx;
}
.camera_box{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.upload_box{
  border:1px solid #e6e6e6;
  width: 180rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.camera_icon{
  width: 65rpx;
  height: 65rpx;
}
.show_img_box{
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  position: relative;
  width: 180rpx;
  height: 180rpx;
}
.show_img{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.close{
  background: rgba(0, 0, 0, .9);
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: 0;
  width: 46rpx;
  height: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.close_icon{
  width: 30rpx;
  height: 30rpx;
}
.label_box{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  font-size: 28rpx;
}
.radio_box{
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border:1px solid #8a8a8a;
  display: flex;
  align-items: center;
  justify-content: center;
}
.yuan{
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  background: #287fe6;
}

.xuzhi{
  color: #ff5858;
}
.push_button{
  border-radius: 40rpx;
  margin: 60rpx auto;
  background: #287fe6;
  width: 600rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
}
.info_location_label{
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #333;
}
.info_location{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.location_text{
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
.right_icon{
  margin-left: 15rpx;
  width: 32rpx;
  height: 32rpx;
}