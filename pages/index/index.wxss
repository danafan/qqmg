/**index.wxss**/

.top_back {
  background: #a1e81a;
  width: 100%;
  height: 280rpx;
}

.content_box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  z-index: 1;
}

.search_box {
  padding-left: 15rpx;
  padding-right: 15rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.search_left {
  display: flex;
  align-items: center;
}

.location_icon {
  width: 34rpx;
  height: 34rpx;
}

.location_text {
  margin-left: 5rpx;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.search_input {
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.5);
  width: 500rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.search_icon {
  margin-right: 10rpx;
  margin-left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.input_text {
  font-size: 26rpx;
  color: #fff;
}

.message_icon {
  width: 48rpx;
  height: 48rpx;
}

.content {
  flex: 1;
  overflow-y: scroll;
  background: #fff;
  border-radius: 80rpx 80rpx 0 0;
  padding: 15rpx;
}

/* 广播 */

.radio_box {
  margin: 0 auto 10rpx;
  width: 80%;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.radio_icon {
  margin-right: 10rpx;
  width: 42rpx;
  height: 42rpx;
}

.swiper_box {
  flex: 1;
  height: 50rpx;
}

.radio_txt {
  font-size: 26rpx;
  color: #333;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  
}

.cate_name {
  color: #f7a908;
}

/* banner */

.banner_box {
  border-radius: 20rpx;
  width: 100%;
  height: 280rpx;
}

.banner_img {
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}
/* 分类 */
.category_row{
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.category_item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cate_icon{
  width: 70rpx;
  height: 70rpx;
}
.cate_txt{
  font-size: 26rpx;
  color: #333;
}
/* 热门发布 */
.hot_box{
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.hot_left{
  display: flex;
  align-items: center;
}
.line{
  margin-right: 15rpx;
  background: #a1e81a;
  width:10rpx;
  height: 40rpx;
}
.hot_text{
  font-size: 36rpx;
  color: #333;
  font-weight: 800;
}
.hot_right{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #f7a908;
}
