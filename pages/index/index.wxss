/**index.wxss**/

/* 导航栏 */

.navgation_box {
  background: #287fe6;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

.title_text {
  padding-left: 15rpx;
  width: 100%;
  display: flex;
  align-items: center;
  color: #fff;
  font-weight: 800rpx;
}

/* 顶部背景色 */

.top_back {
  background: #287fe6;
  width: 100%;
  height: 400rpx;
}

/* 下面内容 */

.content_box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 15rpx 15rpx;
}

/* 添加到桌面提示 */

.add_desktop {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.add_desktop_content {
  border-radius: 28rpx;
  margin-bottom: 15rpx;
  background: rgba(0, 0, 0, 0.6);
  padding-left: 30rpx;
  padding-right: 15rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
}

.add_desktop_text {
  font-size: 24rpx;
  color: #fff;
}

.add_desktop_icon {
  margin-left: 10rpx;
  width: 42rpx;
  height: 42rpx;
}

/* 搜索框 */

.search_box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location_box {
  display: flex;
  align-items: center;
}

.location_icon {
  width: 32rpx;
  height: 32rpx;
}

.location_text {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #fff;
}

.search_input {
  margin-left: 15rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.5);
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.search_icon {
  margin-right: 10rpx;
  margin-left: 20rpx;
  width: 32rpx;
  height: 32rpx;
}
.swiper_search {
  flex: 1;
  height: 30rpx;
}

.input_text {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  color: #fff;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.fans_box {
  position: relative;
  right: -15rpx;
  border-radius: 25rpx 0 0 25rpx;
  background: #ff5858;
  padding-left: 20rpx;
  padding-right: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 15rpx;
  font-size: 24rpx;
  color: #fff;
}

/* banner */

.banner_box {
  margin-top: 30rpx;
  border-radius: 10rpx;
  width: 100%;
  height: 285rpx;
}

.banner_img {
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}

/* 分类 */

.category_row {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.category_item {
  width: 20%;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cate_icon {
  margin-bottom: 10rpx;
  width: 56rpx;
  height: 56rpx;
}

.cate_txt {
  font-size: 28rpx;
  color: #333;
}

/* 热门发布 */

.hot_box {
  margin-bottom: 20rpx;
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.line {
  margin-right: 15rpx;
  background: #287fe6;
  width: 10rpx;
  height: 40rpx;
}

.hot_text {
  font-size: 36rpx;
  color: #333;
  font-weight: 800;
}

