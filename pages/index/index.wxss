/**index.wxss**/

.index_container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.fixed{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9;
}
.startBar{
  background: #a1e81a;
}
.search_box {
  background: #a1e81a;
  padding-left: 15rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.location_icon {
  width: 34rpx;
  height: 34rpx;
}

.location_text {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #fff;
}

.search_input {
  margin-left: 15rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.5);
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.search_icon {
  margin-right: 10rpx;
  margin-left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.input_text {
  font-size: 26rpx;
  color: #fff;
}
.zhan{
  width: 210rpx;
}
.content {
  padding: 0 15rpx 15rpx;
}

.top_back {
  background: #a1e81a;
  width: 100%;
  height: 180rpx;
  border-radius: 0 0 28rpx 28rpx;
  position: relative;
}
/* banner */

.banner_box {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translate(-50%);
  border-radius: 20rpx;
  width: 95%;
  height: 280rpx;
}

.banner_img {
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}

/* 分类 */

.category_row {
  margin-top: 160rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
}

.category_item {
  width: 25%;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cate_icon {
  width: 90rpx;
  height: 90rpx;
}

.cate_txt {
  font-size: 28rpx;
  color: #333;
}

/* 热门发布 */

.hot_box {
  margin-bottom: 20rpx;
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hot_left {
  display: flex;
  align-items: center;
}

.line {
  margin-right: 15rpx;
  background: #a1e81a;
  width: 10rpx;
  height: 40rpx;
}

.hot_text {
  font-size: 36rpx;
  color: #333;
  font-weight: 800;
}

.hot_right {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #f7a908;
}
